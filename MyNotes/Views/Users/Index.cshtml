@model IEnumerable<MyNotes.Models.User>
@{
    ViewData["Title"] = "Users list";
}

<a asp-action="Create">Add user</a>

<table class="table">
    <tr><th>Email</th>@*<th>UserName</th>*@<th>Action</th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            @*<td>@user.UserName</td>*@
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">ChPass</a>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>